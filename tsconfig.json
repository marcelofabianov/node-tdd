{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@application/*": ["application/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true
}
