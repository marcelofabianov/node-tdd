{
  "clearMocks": true,
  "coverageProvider": "v8",
  "rootDir": ".",
  "testMatch": [
    "<rootDir>/tests/**/*.test.ts",
    "<rootDir>/**/entities/**/*.test.ts"
  ],
  "transform": {
    "^.+.(ts)$": ["@swc/jest"]
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "moduleNameMapper": {
    "^@application/(.*)$": "<rootDir>/src/application/$1"
  }
}
